<h2>Se connecter</h2>

<div class="container">
  <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs col-xs-6 col-sm-4 col-sm-offset-4">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions col-xs-6 col-sm-4 col-sm-offset-4">
        <%= f.button :submit, "Se connecter" %>
      </div>
    <% end %>
  </div>
  <div class="shared-links-in-log-in">
    <%= render "devise/shared/links" %>
  </div>
</div>
