

<div class="container-cards-show">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <%= simple_form_for(@gun) do |f| %>
        <%= f.input :name %>
        <%= f.label :category %>
        <%= f.select :category,  Gun::ARMES %>
        <%= f.input :description %>
        <%= f.input :year_of_production %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "add your gun", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<%= cl_image_tag("https://res.cloudinary.com/djoaky4rc/image/upload/v1543330660/arcduturfu.jpg") %>
