<div class="container">
    <div class="row" id="mon-profil-index">
      <div class="tab active col-sm-4">
        <p>Mon armurerie</p>
      </div>
      <div class="tab col-sm-4">
        <p>Mes infos</p>
      </div>
      <div class="tab col-sm-4">
        <p>Mes réservations</p>
      </div>
    </div>
    <div class="mes-armes">
      <div class="row">
          <% @guns.each do |gun| %>
              <div class="col-xs-12 col-sm-12 col-md-12 ">
                <%= link_to gun_path(gun) do %>
                  <div class="card-my-profile">
                    <img src="<%= cl_image_path("https://res.cloudinary.com/djoaky4rc/image/upload/v1543330661/papygun1.jpg") %>" class="product-image hidden-xs">
                    <div class='product-body'>
                      <h3><%= gun.name %></h3>
                      <p><%= gun.category %></p>
                      <p><%= gun.price %> €/jour</p>
                    </div>
                    <ul class="list-inline product-controls hidden-sm hidden-xs">
                      <%= link_to edit_gun_path(gun) do %>
                        <li>Modifier l'annonce</li>
                      <% end %>
                      <%= link_to gun_path(gun),
                          method: :delete,
                          data: { confirm: "Are you sure?" } do %>
                        <li><i class="fas fa-trash-alt"></i></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
              <% end %>
            </div>
    </div>
  </div>
</div>
