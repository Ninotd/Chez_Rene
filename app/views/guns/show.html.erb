

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="weapon-banner">
        <div class="weapon-info">
          <p class="weapon-info-name"><strong><%= @gun.name %></strong></p>
          <p class="weapon-info-description"><%= @gun.description %></p>
          <p class="weapon-info-price"><strong><%= @gun.price %>€</strong></p>
          <p class="info-importante">Informations importantes :</p>
          <div class="weapon-main-info">
            <ul>
              <li><p class="weapon-info-category">Catégorie : <%= @gun.category %></p></li>
              <li><p class="weapon-info-category">Année de production : <%= @gun.year_of_production %></p></li>
              <li><p class="weapon-info-category">Propriétaire : <%= @gun.user.email %></p></li>
            </ul>
          </div>
          <button type="button" class="btn weapon-reserve-btn" data-toggle="modal" data-target="#exampleModal">Réserver cette arme</button>
        </div>
        <div class="weapon-image">
          <%= image_tag 'https://images.unsplash.com/photo-1517651468335-5164984ba2c5?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=12fc40a40c97ee5fc96d4e42cfd0f121&auto=format&fit=crop&w=2887&q=80' %>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Réservation d'une arme</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <h3><%= link_to 'Commander', new_booking_path, class: "btn weapon-reserve-btn"%></h3>
      </div>
    </div>
  </div>
</div>
